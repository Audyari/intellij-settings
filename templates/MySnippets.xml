    <variable name="VAR_NAME" expression="suggestVariableName()" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_CODE" value="true" />
    </context>
  </template>
  <template name="6.floatv" value="float $VAR_NAME$ = $VALUE$f;&#10;$END$     " description="Mendeklarasikan variabel float (angka desimal presisi rendah)" toReformat="false" toShortenFQNames="true">
